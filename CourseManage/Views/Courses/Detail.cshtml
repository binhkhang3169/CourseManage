                            <span class="rating__item">
                                <span class="material-icons">@((i < averageRating) ? "star" : "star_border")</span>
                            </span>
                        }
                    }
                </div>
                <p class="text-muted mb-0">@Model.Item2.Count() ratings</p>
            </div>
            <div class="col-md-9">
                @{
                    var totalFeedbacks = @Model.Item2.Count();
                }

                @for (int i = 5; i >= 1; i--)
                {
                    // Tính tỷ lệ phần trăm cho đánh giá >= i
                    var per = totalFeedbacks > 0 ? (double)@Model.Item2.Count(f => f.Rating >= i && f.Rating < i + 1) / totalFeedbacks * 100 : 0;

                    <div class="row align-items-center mb-8pt"
                         data-toggle="tooltip"
                         data-title="@Math.Round(per, 2)% rated @i/5" 
                         data-placement="top">
                        <div class="col-md col-sm-6">
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-secondary"
                                     role="progressbar"
                                     aria-valuenow="@per"
                                     style="width: @per%"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-auto col-sm-6 d-none d-sm-flex align-items-center">
                            <div class="rating">
                                @for (int j = 1; j <= i; j++)
                                {
                                    <span class="rating__item">
                                        <span class="material-icons">star</span>
                                    </span>
                                }
                                @for (int j = i + 1; j <= 5; j++)
                                {
                                    <span class="rating__item">
                                        <span class="material-icons">star_border</span>
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                }



            </div>
        </div>
        @for (int i = 0; i < 3 && i < Model.Item2.Count(); i++)
        {
