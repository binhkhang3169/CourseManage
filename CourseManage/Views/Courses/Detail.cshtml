                            <a href="student-profile.html"
                               class="card-title">
                                @Model.Item2.ElementAt(i).Student.Name
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="rating mb-8pt">
                        @if (@Model.Item2.ElementAt(i).Rating == null)
                        {
                            <span class="rating__item">
                                <span class="material-icons">star_border</span>
                            </span>
                            <span class="rating__item">
                                <span class="material-icons">star_border</span>
                            </span>
                            <span class="rating__item">
                                <span class="material-icons">star_border</span>
